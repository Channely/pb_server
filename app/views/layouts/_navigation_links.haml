%li= link_to '主页', root_path
%li= link_to '帮助', help_path
- if signed_in?
  - if admin?
    %li= link_to "所有用户", users_path, method: 'get'
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
      %b.caret
      我的帐户
    %ul.dropdown-menu
      %li= link_to "信息统计", user_path(current_user)
      %li= link_to "设置", edit_user_path(current_user)
      %li.divider
      %li= link_to "退出登录", signout_path, method: "delete"
- else
  %li= link_to '登录', signin_path