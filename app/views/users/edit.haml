%div(style="min-height:520px" )
  .container
    .row.row-offcanvas.row-offcanvas-right
      .col-xs-12.col-sm-9
        %h1.text-success 设 置
        .span8
          .form-horizontal
            =form_for :user, url: user_path, method: :patch do |f|
              %fieldset
                .form-group.has-success
                  .col-sm-5.col-sm-offset-7
                    %a{:href => "http://gravatar.com/emails"}
                      = gravatar_for @user
                .form-group.has-success
                  =f.label :name, '昵 称 ：', class: 'col-sm-7 control-label'
                  .col-sm-5
                    =f.text_field :name, class: 'form-control', type: 'text', placeholder: '昵称'
                .form-group.has-success
                  =f.label :email, '邮 箱 ：', class: 'col-sm-7 control-label'
                  .col-sm-5
                    =f.email_field :email, class: 'form-control', disabled: true, type: 'email', placeholder: '邮箱'
                .form-group.has-success
                  =f.label :password, '密 码 ：', class: 'col-sm-7 control-label'
                  .col-sm-5
                    =f.password_field :password, class: 'form-control', type: 'password', placeholder: '至少6位'
                .form-group.has-success
                  =f.label :password_confirmation, '确认密码:', class: 'col-sm-7 control-label'
                  .col-sm-5
                    =f.password_field :password_confirmation, class: 'form-control', type: 'password', placeholder: '密码'
                .form-group.has-success
                  =f.label :question, '密保问题:', class: 'col-sm-7 control-label'
                  .col-sm-5
                    =f.text_field :question, class: 'form-control', type: 'text', placeholder: '密保问题'
                .form-group.has-success
                  =f.label :answer, '密保答案:', class: 'col-sm-7 control-label'
                  .col-sm-5
                    =f.text_field :answer, class: 'form-control', type: 'text', placeholder: '密保答案'
                .form-actions.col-sm-3.col-sm-offset-8
                  %br
                  =f.submit ' 修 改 ', class: 'btn btn-warning btn-lg btn-block'
                .col-sm-5=render 'shared/error_messages'