%div(style="min-height:480px" )
  -#- provide(:title, 'All users')
  %h1 所有用户
  .table-responsive
    %table.table.table-hover.table-bordered
      %tr.success
        %td id
        %td 昵 称
        %td 邮 箱
        %td 密 码
        %td 密保问题
        %td 密保答案
        %td.danger 操作
      - @users.each do |user|
        %tr.warning
          %td=user.id
          %td=user.name
          %td=user.email
          %td=user.password
          %td=user.question
          %td=user.answer
          %td= link_to '修改', edit_user_path(user), class: 'btn btn-block'


